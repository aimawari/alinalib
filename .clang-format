# .clang-format

BasedOnStyle: Google                 # Start with the Google style guide

# Set the indentation width to 4 spaces
IndentWidth: 4

# Indent case labels in switch statements
IndentCaseLabels: true

# Keep braces on their own lines (Allman style)
BraceWrapping:
  AfterClass: true                   # New line after class definitions
  AfterControlStatement: true        # New line after control statements (if, for, etc.)
  AfterEnum: true                    # New line after enum definitions
  AfterFunction: true                # New line after function definitions
  AfterNamespace: true                # New line after namespace definitions
  AfterStruct: true                  # New line after struct definitions
  BeforeCatch: true                  # New line before catch statements
  BeforeElse: true                   # New line before else statements
  IndentBraces: false                # Do not indent braces

# Align pointer and reference operators with the variable type
PointerAlignment: Left

# Keep function declaration parameters on separate lines
AllowAllParametersOfDeclarationOnNextLine: false

# Place a space before and after operators
SpaceBeforeParens: ControlStatements  # Space before parentheses in control statements
SpacesInParentheses: false            # No spaces inside parentheses

# Avoid putting the closing parenthesis on a new line in multi-line statements
BinPackArguments: false               # Do not pack function arguments into a single line
BinPackParameters: false              # Do not pack function parameters into a single line

# Avoid breaking after operators
BreakBeforeBinaryOperators: None      # No line breaks after binary operators

# Set the column limit to 80 characters per line
ColumnLimit: 80

# Additional Allman style preferences
BreakBeforeBraces: Allman            # Ensure braces are always on a new line
AllowShortBlocksOnASingleLine: false # Disallow short blocks on a single line
AllowShortFunctionsOnASingleLine: false # Disallow short functions on a single line
AllowShortCaseLabelsOnASingleLine: false # Disallow short case labels on a single line

